{
	"compilerOptions": {
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"typeRoots": ["./typing"],
		"module": "commonjs",
		"moduleResolution": "node",
		"pretty": true,
		"sourceMap": true,
		"target": "es2018",
		"outDir": "./dist",
		"baseUrl": "./src",

		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
	},
	"include": [
		"src/**/*.ts",
		"typing/**/*.ts"
	],
	"exclude": [
		"node_modules/**/*.d.ts"
	],
	"paths": {
		"@errors": "./src/errors"
	}
}
